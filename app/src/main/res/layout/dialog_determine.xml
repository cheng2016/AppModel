<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="26dp"
            android:textColor="@color/text_black"
            android:text="确定退出吗？"
            android:textSize="@dimen/text_size16" />

        <View style="@style/SplitLine" />

        <LinearLayout
            android:id="@+id/lay_choice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/tm"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_left"
                android:gravity="center"
                android:padding="10dp"
                android:text="取    消"
                android:textColor="@color/text_color24"
                android:textSize="@dimen/text_size16" />

            <View
                android:layout_width="0.1px"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tv_dialog_remind_commit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_right"
                android:gravity="center"
                android:padding="10dp"
                android:text="确    定"
                android:textColor="@color/text_color24"
                android:textSize="@dimen/text_size16" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
