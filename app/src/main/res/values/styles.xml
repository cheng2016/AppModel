<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAPPThemeOne" />

    <style name="APPThemeGT" parent="BaseAPPThemeTwo" />


    <!--少花点主题-->
    <style name="BaseAPPThemeOne" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/status_bar_color1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color_type1</item>

        <item name="textLight">@color/text_color_type1</item>
        <item name="appBg">@color/bg_color_type1</item>
        <item name="titleBg">@color/title_color_type1</item>
    </style>
    <!--国腾主题-->
    <style name="BaseAPPThemeTwo" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/status_bar_color2</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color_type1</item>

        <item name="textLight">@color/text_color_type2</item>
        <item name="appBg">@color/bg_color_type2</item>
        <item name="titleBg">@color/title_color_type2</item>
    </style>


    <style name="SplitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_thin</item>
        <item name="android:background">@color/line_color</item>
    </style>



    <style name="me_text_style">
        <item name="android:textColor">@color/text_color21</item>
        <item name="android:textSize">@dimen/text_size16</item>
    </style>


    <style name="input_text_style">
        <item name="android:textColor">@color/text_color22</item>
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="android:textColorHint">@color/text_color10</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>




    <style name="SplitLine2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_thin</item>
        <item name="android:background">@color/line_color2</item>
    </style>

    <!--输入框样式-->
    <style name="TextInputStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color_type1</item>
    </style>
    <!--个人中心列表样式-->
    <style name="MeTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="my_dialog" parent="@android:style/Theme.Dialog">
        <!-- 窗口边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 窗口是否浮动在Activity上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 没有标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
    </style>


</resources>
